<layout version="0.1.0">

<!--
Heidelpay WPF
-->
<heidelpay_process_index>
    <reference name="root">
        <action method="setTemplate"><template>page/1column.phtml</template></action>
    </reference>
    <reference name="content">
        <block type="heidelpay/index" name="heidelpay_index" template="heidelpay/index.phtml" />
    </reference>
</heidelpay_process_index>

<!--
Heidelpay Failure Page
-->
<heidelpay_process_failure>
    <reference name="root">
        <action method="setTemplate"><template>page/1column.phtml</template></action>
    </reference>
    <reference name="content">
        <block type="heidelpay/failure" name="heidelpay_failure" template="heidelpay/failure.phtml" />
    </reference>
</heidelpay_process_failure>

</layout>